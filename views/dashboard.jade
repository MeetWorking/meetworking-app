extends layout

block content
  include ./partials/_scripts.jade
  include ./partials/_dashboard-nav.jade
  .container
    .row
      .col-md-8.col-md-offset-1
        if !companies[0]
          h2.searchingcompany You haven't chosen any companies to follow yet. Try searching companies above.
        .backbone
      .col-md-3
        #sidebar(data-spy="affix" data-offset-top="0" data-offset-bottom="200")
          if companies[0]
            h3 Search companies
            br
            form(action="/company/#{companies[0].searchcompany}")
              input.btn-company.btn.btn-info(type="submit" value="#{companies[0].searchcompany}")
          br
          if companies[1]
            form(action="/company/#{companies[1].searchcompany}")
              input.btn-company.btn.btn-success(type="submit" value="#{companies[1].searchcompany}")
          br
          if companies[2]
            form(action="/company/#{companies[2].searchcompany}")
              input.btn-company.btn.btn-danger(type="submit" value="#{companies[2].searchcompany}")
          br
  .preloader
    span.preloader-gif
